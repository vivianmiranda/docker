FROM whoviancosmobase

# --------------------------------------------------------------------------
# --------------------------------------------------------------------------
# --------------------------------------------------------------------------
# SET CONDA ENV COSMO

RUN conda create --force --name cosmo python=3.7 --no-default-packages \
  --quiet --yes

RUN conda install -n cosmo --quiet --yes \
    'python-dateutil=2.8.1' \
    'readline=8.0' \
    'six=1.15.0' \
    'numpy=1.19.1' \
    'cython=0.29.21' \
    'protobuf=3.13.0' \
    'nodejs' \
    'kiwisolver=1.2.0' \
    'pyparsing=2.4.7' \
    'pillow=7.2.0' \
    'fuzzywuzzy=0.17.0' \
    'pyyaml=5.3.1' \
    'virtualenv=20.0.20' \
    'imageio=2.9.0' \
    'notebook=6.1.1' \
    'gcc_linux-64=9.3.0'

#--------------------------------------------------------------------
# NUMERICAL WORK
RUN conda install -n cosmo --quiet --yes \
    'scipy=1.5.2' \
    'pandas=1.1.1' \
    'hdf5=1.10.6' \
    'h5py=2.10.0' \
    'astropy=4.0.1.post1' \
    'pybind11=2.5.0'

#--------------------------------------------------------------------
# PIP
RUN /opt/conda/envs/cosmo/bin/pip install --quiet --no-cache-dir \
    'tokenizers==0.8.1' \
    'numba==0.50.1' \
    'GetDist==1.1.2' \
    'pyfits==3.5' \
    'seaborn==0.10.1' \
    'emcee==3.0.2' \
    'iminuit==1.4.9' \
    'py-bobyqa==1.2' \
    'wget==3.2' \
    'matplotlib==3.3.1' \
    'mpi4py==3.0.3' \
#--------------------------------------------------------------------
  && conda clean --all -f -y \
  && find $CONDA_DIR -follow -type f -name '*.pyc' -delete \
  && /usr/local/bin/fix-permissions $HOME \
  && /usr/local/bin/fix-permissions $CONDA_DIR

# --------------------------------------------------------------------------
# --------------------------------------------------------------------------
# --------------------------------------------------------------------------
COPY jupyter_notebook_config.py $HOME/.jupyter/jupyter_notebook_config.py
COPY bashrc $HOME/bash.bashrc

RUN chmod +x /usr/bin/tini \
  && chmod a+rwx $HOME/bash.bashrc \
  && mkdir -p $HOME/host/ && chmod -R a+rwx $HOME/host/ \
  && /usr/local/bin/fix-permissions $HOME \
  && ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh \
  && echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc \
  && rm -rf ~/.cache/pip \
  && /usr/local/bin/fix-permissions $HOME \
  && /usr/local/bin/fix-permissions $CONDA_DIR \
  && chown $NB_USER:$NB_GID $CONDA_DIR

EXPOSE 8888

ENTRYPOINT ["tini", "-g", "--"]
CMD ["/bin/bash", "-c", "source $HOME/bash.bashrc; /bin/bash"]

USER $NB_UID
WORKDIR $HOME
VOLUME ["$HOME/host/"]

RUN /usr/local/bin/fix-permissions $CONDA_DIR \
  && /usr/local/bin/fix-permissions $HOME
